{
    "name": "example-config",
    "training": [
        {
            "dim_in": [
                64,
                64,
                1
            ]
        },
        {
            "dim_out": [
                64,
                64,
                3
            ]
        },
        {
            "n_epochs": 10
        },
        {
            "n_workers": 6
        },
        {
            "batch_size": 64
        },
        {
            "shuffle": true
        },
        {
            "mode": "grey-in-softencode-out"
        },
        {
            "dataset": "tiny-imagenet-dataset-tiny"
        },
        {
            "loss": "multinomial_loss"
        }
    ],
    "callbacks": [
        {
            "tensorboard": [
                {
                    "use_tensorboard": true
                }
            ]
        },
        {
            "reducing-learning-rate": [
                {
                    "reduce_lr_on_plateau": false
                }
            ]
        },
        {
            "save": [
                {
                    "colorisation-progress": [
                        {
                            "save_colorisation": true
                        },
                        {
                            "path_to_colorisation_images": "recolor/saved_objects/tracked_pictures.txt"
                        }
                    ]
                },
                {
                    "periodically-save-model": [
                        {
                            "save_periodically": true
                        },
                        {
                            "psm_period": 2
                        },
                        {
                            "psm_file_name": "model.{epoch:02d}-{val_loss:.2f}.hdf5"
                        }
                    ]
                },
                {
                    "save-best-model": [
                        {
                            "save_best": true
                        },
                        {
                            "sbm_file_name": "best-model.{epoch:02d}-{val_loss:.2f}.hdf5"
                        }
                    ]
                }
            ]
        }
    ],
    "shutdown-on-completion": false
}